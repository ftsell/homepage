{% macro anchor(url, name, attrs="") -%}
    <a href="{{ url }}" {% if request.url.path == url %}class="trans-underline" aria-current="page"{% endif %} {{ attrs }}>{{ name }}</a>
{%- endmacro %}

{% macro cmd(cmd, args) -%}
    <div class="pseudoshell">
        <div class="cmdline">
            <span>$</span><span>{{ cmd }}</span> <span>{{ args }}</span>
        </div>
        <div class="cmd-result">
            {{ caller() }}
        </div>
    </div>
{%- endmacro %}

{% macro h2(linkTarget) -%}
    <h2>
        <span>{{ caller() }}</span>
        <a href="#{{ linkTarget }}" title="Link to this section">#</a>
    </h2>
{%- endmacro %}
